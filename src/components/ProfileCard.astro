---
import { Image, Picture } from "@astrojs/image/components";

const { name, picture, bio } = Astro.props.person;
---

<div>
  <Image
    src={picture}
    alt={`Profile picture of ${name} from Greenfingers Films`}
    format="webp"
    width={390}
    height={425}
    class="rounded-md"
  />
  <h3 class="mt-1 text-lg tracking-tight text-primary">{name}</h3>
</div>
