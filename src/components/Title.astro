---
const { text, banner = false, addtionalClasses } = Astro.props;
---

<div class={"inline-block relative " + addtionalClasses}>
  <h1
    class="text-9xl md:capsizedText font-humane font-bold uppercase text-primary"
  >
    {text}
  </h1>
  {
    banner && (
      <div class="absolute bottom-0 bg-custom-black text-primary flex rounded-sm -rotate-2 right-0 translate-x-1/3 translate-y-4">
        <p class="font-sans text-[8px] font-medium uppercase tracking-tighter px-2 py-1.5">
          More coming soon
        </p>
      </div>
    )
  }
</div>

