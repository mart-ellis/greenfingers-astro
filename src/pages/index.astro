      </div>
      <div class="flex justify-between items-center py-6 px-8">
        <p class="text-primary font-light text-[8px] md:text-[10px] opacity-70">
          COPYRIGHT GREENFINGERS FILMS 2023Â©
        </p>
        <button
          class="to-top bg-primary px-1 py-1 md:px-2 md:py-2 flex justify-center items-center rounded-sm"
        >
          <p
            class="text-dark-green uppercase text-[10px] md:text-xs font-medium pr-1"
          >
            Back to top
          </p>
        </button>
      </div>
    </footer>
  </main>
</Layout>

<script>
  const toTop = document.querySelector(".to-top");
  toTop.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });

  const emailCopy = document.querySelector(".email-copy");
  emailCopy.addEventListener("click", () => {
    navigator.clipboard.writeText("greenfingersfilms@gmail.com");
  });
</script>
