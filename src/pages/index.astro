---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import { Image, Picture } from "@astrojs/image/components";
import Title from "../components/Title.astro";
import FilmCard from "../components/FilmCard.astro";
import ProfileCard from "../components/ProfileCard.astro";
import films from "../data/films.json";
import people from "../data/people.json";
import Awards from "../components/Awards.astro";
import Ticker from "../components/Ticker.astro";
---

<Layout title="GREENFINGERS FILMS. ðŸ¥¬ â€” Award-winning film collective.">
  <Navbar />

  <main class="">
    <section class="h-screen">
      <div class="pt-24">
        <h1
          class="uppercase font-humane text-primary text-[58vw] leading-[43vw] md:text-[35vw] font-bold"
        >
          Green<br class="md:hidden" />fingers
        </h1>
        <p
          class="text-primary text-xs md:text-sm font-light tracking-tight ml-4 -mt-4 md:ml-32 md:w-48 leading-4"
        >
          Your friendly award-winning film collective.
        </p>
      </div>
      <div class="flex items-end absolute bottom-2 gap-3 overflow-hidden"></div>
    </section>
    <Awards indexes={[1, 2, 3]} />
    <section class="pt-20">
      <Title text="Our Recent Films" banner />
      <div class="mt-12 grid grid-cols-1 gap-10 lg:grid-cols-3">
        {films.map((film, index) => <FilmCard film={film} index={index} />)}
      </div>
    </section>
    <Awards indexes={[4, 5, 6]} />
    <section class="pt-20">
      <div class="flex flex-col md:justify-between md:items-end md:w-5/6">
        <Title text=" Meet the Fingers" addtionalClasses="whitespace-nowrap" />
        <p
          class="max-w-sm md:max-w-xs md:px-6 md:text-right text-primary opacity-70 tracking-tight text-sm font-light"
        >
          Greenfingers is an internationally award-winning film collective based
          in Manchester. Meet our members below.
        </p>
      </div>
      <div
        class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-2 md:gap-8 md:max-w-[85vw]"
      >
        {people.map((person) => <ProfileCard person={person} />)}
      </div>
    </section>
    <Ticker />
    <section class="flex items-center justify-center">
      <div class="flex flex-col items-center">
        <h3
          class="text-lg md:text-2xl uppercase font-medium md:font-semibold text-primary tracking-tight"
        >
          Want to chat?
        </h3>
        <h4
          class="text-3xl text-center md:text-5xl uppercase font-bold md:font-extrabold text-primary tracking-tight"
        >
          Get in touch using the email below.
        </h4>
        <button
          class="email-copy bg-custom-black text-primary flex items-center mt-12 rounded-sm"
        >
          <p class="uppercase font-semibold py-3 px-4 text-xs">
            greenfingersfilms@gmail.com
          </p>
          <div
            class="border-primary border-l border-opacity-10 flex items-center py-3 px-4"
          >
            <p
              class="uppercase font-medium pr-2 opacity-70 text-xs whitespace-nowrap"
            >
              Click to copy
            </p>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              width="24"
              height="24"
              class="w-5 fill-current opacity-70"
              ><path fill="none" d="M0 0h24v24H0z"></path><path
                d="M7 6V3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1h-3v3c0 .552-.45 1-1.007 1H4.007A1.001 1.001 0 0 1 3 21l.003-14c0-.552.45-1 1.007-1H7zM5.003 8L5 20h10V8H5.003zM9 6h8v10h2V4H9v2z"
              ></path></svg
            >
          </div>
        </button>
      </div>
    </section>
    <footer class="pt-40">
      <div class="flex">
        <a
          href="https://www.instagram.com/greenfingers_film/"
          target="_blank"
          class="w-1/4 aspect-square bg-[#C7F3D6] flex items-center justify-center"
        >
