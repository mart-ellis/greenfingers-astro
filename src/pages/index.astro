---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import { Image, Picture } from "@astrojs/image/components";
import Title from "../components/Title.astro";
import FilmCard from "../components/FilmCard.astro";
import ProfileCard from "../components/ProfileCard.astro";
import films from "../data/films.json";
import people from "../data/people.json";
import Awards from "../components/Awards.astro";
import Ticker from "../components/Ticker.astro";
---

<Layout title="GREENFINGERS FILMS. ðŸ¥¬ â€” Award-winning film collective.">
  <Navbar />

  <main class="">
    <section class="h-screen mt-16">
      <div class="">
        <h1
          class="uppercase font-humane text-primary text-[35vw] leading-none font-bold"
        >
          Greenfingers
        </h1>
      </div>
      <p
        class="text-primary text-sm font-light -mt-20 tracking-tight ml-32 w-48 leading-4"
      >
        Your friendly award-winning film collective.
      </p>
      <div class="flex items-end absolute bottom-2 gap-3 overflow-hidden">
        <Image
          src="/images/200x300.jpeg"
          alt="Greenfingers Film Still 1"
          format="webp"
          width={260}
          height={170}
          class="grayscale"
        />
        <Image
          src="/images/200x400.jpeg"
          alt="Greenfingers Film Still 2"
          format="webp"
          width={200}
          height={120}
          class="grayscale"
        />
        <Image
          src="/images/300x200.jpeg"
          alt="Greenfingers Film Still 3"
          format="webp"
          width={220}
          height={160}
          class="grayscale"
        />
        <Image
          src="/public/images/300x300.jpeg"
          alt="Greenfingers Film Still 4"
          format="webp"
          width={260}
          height={150}
          class="grayscale"
        />
        <Image
          src="/images/400x100.jpeg"
          alt="Greenfingers Film Still 5"
          format="webp"
          width={200}
          height={100}
          class="grayscale"
        />
        <Image
          src="/images/400x200.jpeg"
          alt="Greenfingers Film Still 6"
          format="webp"
          width={250}
          height={140}
          class="grayscale"
        />
      </div>
    </section>
    <Awards indexes={[1, 2, 3]} />
    <section class="pt-20">
      <Title text="Our Recent Films" banner />
      <div class="mt-12 grid grid-cols-1 gap-10 lg:grid-cols-3">
        {films.map((film, index) => <FilmCard film={film} index={index} />)}
      </div>
    </section>
    <Awards indexes={[4, 5, 6]} />
    <section class="pt-20">
      <div class="flex justify-between items-end w-5/6">
        <Title text=" Meet the Fingers" addtionalClasses="whitespace-nowrap" />
        <p
          class="max-w-xs px-6 text-right text-primary opacity-70 tracking-tight text-sm font-light"
        >
          Greenfingers is an internationally award-winning film collective based
          in Manchester. Meet our members below.
        </p>
      </div>
      <div class="mt-16 grid grid-cols-4 gap-8 max-w-[85vw]">
        {people.map((person) => <ProfileCard person={person} />)}
      </div>
    </section>
    <Ticker />
    <footer class="pt-40">
      <div class="flex">
        <a
          href="https://www.instagram.com/greenfingers_film/"
          target="_blank"
          class="w-1/4 aspect-square bg-[#C7F3D6] flex items-center justify-center"
